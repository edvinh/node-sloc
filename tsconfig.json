{
  "compilerOptions": {
    "target": "ES2017", // Node >=8
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "strict": true,
    "lib": ["ES2017"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src"]
}
